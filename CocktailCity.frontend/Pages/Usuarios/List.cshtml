@page
@model CocktailCity.frontend.Pages.Usuarios.ListModel
@{
}

<h1><center>Listado de Usuarios</center></h1>
<hr />
<table class="table table-hover" style="background-color: #D7DBDD" border="1">
    <thead>
        <tr style="background-color: #000000; color: #ffffff">
            <th scope="col"><center>ID</center></th>
            <th scope="col"><center>Nombre</center></th>
            <th scope="col"><center>Tipo de documento</center></th>
            <th scope="col"><center>Número de documento</center></th>
            <th scope="col"><center>Género</center></th>
            <th scope="col"><center>Número de contacto</center></th>
            <th scope="col"><center>Correo electronico</center></th>
            <th scope="col"><center>Perfil</center></th>
            <th scope="col"><center>Opciones</center></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model.usuarios)
        {
            <tr> 
                <td><center>@usuario.ID</center></td>
                <td><center>@usuario.Nombre</center></td>
                <td><center>@usuario.TipoDocumento</center></td>
                <td><center>@usuario.NumeroDocumento</center></td>
                <td><center>@usuario.Genero</center></td>
                <td><center>@usuario.NumeroContacto</center></td>
                <td><center>@usuario.CorreoElectronico</center></td>
                <td><center>@usuario.Perfil</center></td>
                <td><center><a class="btn btn-secondary" asp-page="./Details" asp-route-id="@usuario.ID">Detalle</a></center></td>
            </tr>
        }
    </tbody>
</table>
<center>
    <button type="submit" value="Guardar" class="btn btn-default" style="background-color: #D7DBDD"><a href="https://localhost:5001/Usuarios/Create" class="button">Crear usuario</a></button>
</center>